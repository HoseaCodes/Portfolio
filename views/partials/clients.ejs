<h2 id="projects-header"> Freelance Clients</h2>
<% for (let i=0; i < clients.length; i++) { %>
    <% if (clients[i].show==true) { %>
        <section class="projects">
            <h3 class="project-header">
                <a class="project-header" href="<%=clients[i].demoLink%>">
                    <%=clients[i].projectName%>
                </a>
            </h3>
            <div>
                <button class="top-btn" id="project1-overview">Overview</button>
                <button class="top-btn" id="project1-browse">Browse Files</button>
            </div>
            <div style="border: 1px solid rgb(82, 80, 80); border-radius: 12px;">
                <video id="project1-video" loop="true" autoplay="autoplay" muted>
                    <source src="<%=clients[i].videoLink%>" type="video/mp4">
                    <track label="English" kind="project" srclang="en" default>
                </video>
                <iframe id="project1-iframe" class="iframe" src="<%=clients[i].iframe%>"
                    style="border: 0; width: 100%; height: 60vh;" allowfullscreen scrolling="yes">
                </iframe>
            </div>
            <ul class="tags">
                <% for (let j=0; j < clients[i].tags.length; j++) { %>
                    <li class="tag">
                        <%=clients[i].tags[j]%>
                    </li>
                    <% } %>
            </ul>
            <div style="padding: 2%">
                <p class="project-info">
                    <%=clients[i].description%>
                </p>
                <a class="project-links" href="<%=clients[i].githubLink%>">Github</a>
                <a class="project-links" href="<%=clients[i].demoLink%>">Demo</a>
            </div>
        </section>
    <% } %>
<% } %>

